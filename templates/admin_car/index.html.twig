{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<div class="container-fluid mx-auto">
    <h1 class="mb-3 text-center">Car List</h1>
    <div class="text-center">
        <a href="{{ path('app_admin_car_new') }}" class="text-decoration-none text-white btn btn-success"><span
                class="fs-5">+
            </span>Add new car</a>
    </div>


    <table class="table container-fluid text-center mt-3 mx-auto table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Cost</th>
                <th>NbSeats</th>
                <th>NbDoors</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.name }}</td>
                <td>{{ car.cost }}</td>
                <td>{{ car.nbSeats }}</td>
                <td>{{ car.nbDoors }}</td>
                <td>
                    <a href="{{ path('app_admin_car_show', {'id': car.id}) }}"
                        class="text-decoration-none btn btn-primary">&#x1F441;</a>
                    <a href="{{ path('app_admin_car_edit', {'id': car.id}) }}"
                        class="text-decoration-none btn btn-warning my-2"> &#129718;</a>

                    {{ include('admin_car/_delete_form.html.twig') }}

                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}