{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="mb-3 text-center">Car List</h1>
    <a href="{{ path('app_admin_car_new') }}"
        class="text-decoration-none text-white bg-success py-2 px-3 rounded-1"><span class="fs-5">+
        </span>Add new
        Car</a>

    <table class="table container-fluid mt-3 table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Cost</th>
                <th>NbSeats</th>
                <th>NbDoors</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.name }}</td>
                <td>{{ car.cost }}</td>
                <td>{{ car.nbSeats }}</td>
                <td>{{ car.nbDoors }}</td>
                <td>
                    <a href="{{ path('app_admin_car_show', {'id': car.id}) }}"
                        class="text-decoration-none bg-primary py-1 px-2 rounded-1">&#x1F441;</a>
                    <a href="{{ path('app_admin_car_edit', {'id': car.id}) }}"
                        class="text-decoration-none bg-warning py-1 px-2 rounded-1"> &#129718;</a>

                    {{ include('admin_car/_delete_form.html.twig') }}

                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}