{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
<h1 class="text-center">Car details</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ car.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ car.name }}</td>
        </tr>
        <tr>
            <th>Cost</th>
            <td>{{ car.cost }}</td>
        </tr>
        <tr>
            <th>NbSeats</th>
            <td>{{ car.nbSeats }}</td>
        </tr>
        <tr>
            <th>NbDoors</th>
            <td>{{ car.nbDoors }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('app_admin_car_index') }}" class="text-decoration-none btn btn-dark">&#x21a9;</a>

<a href="{{ path('app_admin_car_edit', {'id': car.id}) }}" class="text-decoration-none btn btn-warning my-2">
    &#129718;</a>

